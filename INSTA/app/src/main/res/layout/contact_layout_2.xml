<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Précédent" />

            <EditText
                android:id="@+id/et_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Diplome obtenu" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Formation souhaitée"
                android:textAlignment="center" />

            <RadioGroup
                android:id="@+id/rg_bts"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTS SIO option Réseaux" />

                <RadioButton
                    android:id="@+id/rb_dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTS SIO option Logiciel" />

                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rb_init"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initiale" />

                    <RadioButton
                        android:id="@+id/rb_alt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alternance" />

                    <RadioButton
                        android:id="@+id/rb_dunno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ne sais pas" />
                </RadioGroup>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#000000" />

                <RadioButton
                    android:id="@+id/rb_ana_dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyste logiciel" />

                <RadioButton
                    android:id="@+id/rbb_ana_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyste réseaux" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#000000" />

                <RadioButton
                    android:id="@+id/rb_archi_dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Architecte logiciel" />

                <RadioButton
                    android:id="@+id/archi_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Architecte réseaux" />

                <Button
                    android:id="@+id/btn_valider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Valider" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>